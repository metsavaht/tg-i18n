{
  "name": "tg-i18n",
  "version": "1.0.0-alpha1",
  "description": "Tool to generate translation files and provide them to React apps.",
  "main": "./dist/index.js",
  "jsnext:main": "./es/index.js",
  "module": "./es/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thorgate/tg-i18n.git"
  },
  "bin": {
    "i18n-makemessages": "./dist/makemessages/cli.js"
  },
  "author": "Thorgate <hi@thorgate.eu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thorgate/tg-i18n/issues"
  },
  "homepage": "https://github.com/thorgate/tg-i18n#readme",
  "devDependencies": {
    "@babel/cli": "7.1.0",
    "@babel/core": "7.1.0",
    "@babel/plugin-proposal-class-properties": "7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0",
    "@babel/plugin-proposal-optional-chaining": "7.0.0",
    "@babel/plugin-transform-runtime": "7.1.0",
    "@babel/polyfill": "7.0.0",
    "@babel/preset-env": "7.1.0",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "@babel/register": "7.0.0",
    "@babel/runtime": "7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "9.0.0",
    "babel-jest": "23.6.0",
    "coveralls": "*",
    "cross-env": "5.2.0",
    "eslint": "5.6.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-flowtype": "2.50.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-react": "7.11.1",
    "flow-bin": "0.81.0",
    "flow-copy-source": "2.0.2",
    "flow-watch": "1.1.3",
    "is": "^3.2.1",
    "jest": "23.5.0",
    "jsdoc-to-markdown": "4.0.1",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-testing-library": "5.1.0",
    "rimraf": "*"
  },
  "peerDependencies": {
    "is": "^3.2.1",
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "dependencies": {
    "date-fns": "1.29.0",
    "gettext-extractor": "3.3.2",
    "gettext-parser": "2.0.0",
    "hoist-non-react-statics": "3.0.1",
    "jed": "1.1.1",
    "memoize-one": "4.0.2",
    "shelljs": "^0.8.2",
    "yargs": "12.0.2"
  },
  "files": [
    "es/",
    "dist/"
  ],
  "jest": {
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/test",
      "<rootDir>/node_modules"
    ],
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "!<rootDir>/test/**"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "scripts": {
    "clean": "npm run clean:dist && npm run clean:es",
    "clean:dist": "$(npm bin)/rimraf dist",
    "clean:es": "$(npm bin)/rimraf es",
    "flow": "$(npm bin)/flow check src",
    "flow:watch": "$(npm bin)/flow-watch --ignore node_modules/ --watch src/ --watch *.js.flow --watch .flowconfig",
    "lint": "$(npm bin)/eslint src test",
    "quality": "npm run lint && npm run flow",
    "test": "cross-env BABEL_ENV=test $(npm bin)/jest",
    "coverage": "$(npm bin)/nyc report && $(npm bin)/nyc report --reporter=html",
    "coveralls": "$(npm bin)/nyc report --reporter=text-lcov | $(npm bin)/coveralls",
    "prebuild": "npm run clean -s && npm run lint && npm run flow",
    "build": "npm run build:umd && npm run build:es && npm run build:flow",
    "build:umd": "cross-env BABEL_ENV=commonjs $(npm bin)/babel src -d dist --copy-files",
    "build:es": "cross-env BABEL_ENV=es $(npm bin)/babel src -d es --copy-files",
    "build:flow": "flow-copy-source src dist && flow-copy-source src es",
    "docs": "$(npm bin)/jsdoc2md -t _docs/README.hbs src/*.js",
    "prepare": "npm run build -s",
    "prepublishOnly": "npm run build -s",
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish",
    "postpublish": "git push origin master --follow-tags"
  }
}

{
    "env": {
        "commonjs": {
            "presets": [
                "es2015"
            ],
            "plugins": [
                "transform-runtime",
                "transform-class-properties",
                "transform-object-rest-spread",
                "transform-flow-strip-types"
            ]
        },
        "es": {
            "presets": [
                ["es2015", {
                    "loose": false,
                    "modules": false
                }]
            ],
            "plugins": [
                "transform-runtime",
                "transform-class-properties",
                "transform-object-rest-spread",
                "transform-flow-strip-types"
            ]
        },
        "test": {
            "presets": [
                "es2015"
            ],
            "plugins": [
                "transform-class-properties",
                "transform-object-rest-spread",
                "transform-flow-strip-types",
                ["istanbul", {
                    "exclude": [
                        "**/test/*.js",
                        "test-server.js"
                    ]
                }]
            ]
        }
    }
}

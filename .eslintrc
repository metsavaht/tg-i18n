{
    "parser": "babel-eslint",
    "extends": "airbnb/base",
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "chai": true,
        "DJ_CONST": false
    },
    "rules": {
        "quotes": [2, "single", "avoid-escape"],
        "comma-dangle": [2, "never"],
        "brace-style": [0, "1tbs", {"allowSingleLine": true}],
        "no-underscore-dangle": 0,
        "func-names": 0,
        "no-else-return": 0,
        "no-param-reassign": 0,
        "no-reserved-keys": 0,
        "no-console": 0,

        "padded-blocks": [0, "never"],
        "indent": [2, 4]
    }
}
